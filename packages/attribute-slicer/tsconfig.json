{
  "compilerOptions": {
		"target": "esnext",
		"module": "esnext",
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "outDir": "lib"
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "power-bi",
    "node_modules",
    "build",
    "typings/browser.d.ts",
    "typings/browser"
  ]
}
